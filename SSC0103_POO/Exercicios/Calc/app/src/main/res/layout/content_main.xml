<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="64dp" android:id="@+id/txtAns" android:textSize="30sp"
            android:enabled="false"/>
        <EditText
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/txtOp1"/>
        <EditText
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/txtOperador"/>
        <EditText
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/txtOp2"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <Button
                    android:text="7"
                    android:layout_width="107dp"
                    android:onClick="btnNumberClick"
                    android:layout_height="wrap_content" android:id="@+id/btn07"/>
                <Button
                    android:text="8"
                    android:layout_width="99dp"
                    android:onClick="btnNumberClick"
                    android:layout_height="wrap_content" android:id="@+id/btn08"/>
                <Button
                    android:text="9"
                    android:layout_width="99dp"
                    android:onClick="btnNumberClick"
                    android:layout_height="wrap_content" android:id="@+id/btn09"/>
                <Button
                    android:text="-"
                    android:layout_width="108dp"
                    android:layout_height="match_parent" android:id="@+id/btnSub"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:onClick="btnNumberClick"
                    android:layout_height="wrap_content" android:id="@+id/btn04"/>
                <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:onClick="btnNumberClick"
                    android:layout_height="wrap_content" android:id="@+id/btn05"/>
                <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:onClick="btnNumberClick"
                    android:layout_height="wrap_content" android:id="@+id/btn06"/>
                <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:onClick="btnOperation"
                    android:layout_height="wrap_content" android:id="@+id/btnAdd"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:onClick="btnNumberClick"
                    android:layout_height="wrap_content" android:id="@+id/btn01"/>
                <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:onClick="btnNumberClick"
                    android:layout_height="wrap_content" android:id="@+id/btn02"/>
                <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:onClick="btnNumberClick"
                    android:layout_height="wrap_content" android:id="@+id/btn03"/>
                <Button
                    android:text="X"
                    android:layout_width="wrap_content"
                    android:onClick="btnOperation"
                    android:layout_height="wrap_content" android:id="@+id/btnMul"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:text="LIMPA"
                    android:layout_width="wrap_content"
                    android:onClick="btnClear"
                    android:layout_height="wrap_content" android:id="@+id/btnClr"/>
                <Button
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:onClick="btnNumberClick"
                    android:layout_height="wrap_content" android:id="@+id/btn00"/>
                <Button
                    android:text="="
                    android:layout_width="wrap_content"
                    android:onClick="btnRet"
                    android:layout_height="wrap_content" android:id="@+id/btnRet"/>
                <Button
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:onClick="btnOperation"
                    android:layout_height="wrap_content" android:id="@+id/btnDiv"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="64dp" android:id="@+id/txtNop" android:textSize="30sp"
                    android:enabled="false"/>
                <Button
                    android:text="Oper. 1"
                    android:layout_width="wrap_content"
                    android:onClick="btnChangeOperando1"
                    android:layout_height="wrap_content" android:id="@+id/btnChange1"/>
                <Button
                    android:text="Oper. 2"
                    android:layout_width="wrap_content"
                    android:onClick="btnChangeOperando2"
                    android:layout_height="wrap_content" android:id="@+id/btnChange2"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </TableLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>